<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @article.title %></dd>
</dl>
<dl class="dl-horizontal">
  <dt>Description:</dt>
  <dd><%= @article.description %></dd>
</dl>

  <% @article.content %>

<div style="width:300px; height:600px">
  <%= video_tag(url_for(@article.clip), style:'width: 100%; height: auto', controls: '') %>
</div>
<div style="width:400px; height:600px">
  <%= image_tag(@article.thumbnail, style: 'width:50%; height:50%') %><br>
  thumbnail:
  <%= @article.description %>

</div>
<!--comment section for articles -->
<section class="section replies">
    <h2 class="subtitle is-5"><strong><%= @article.replies.count %></strong>Comments</h2>
    <%= render @article.replies %>
    <div class="comment-form">
      <hr>
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render 'replies/form' %>
    </div>
</section>

<%= link_to "Back to memories listings", articles_path %>

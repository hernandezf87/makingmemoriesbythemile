<h4 align="center">Request access for Making Memories By The Mile</h4>
<body id="signupcontainter">

<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}, url: signup_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :name %>
      </div>
      <div class="col-md-12">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Full Name", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :email %>
      </div>
      <div class="col-md-12">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter Your Email", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :password %>
    </div>
    <div class="col-md-12">
      <%= f.password_field :password, class: "form-control", autofocus: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset- col-sm-10">
      <%= f.submit "Sign Up", class: 'btn btn-primary btn-md' %>
    </div>
  </div>
  <% end %>
  </body>

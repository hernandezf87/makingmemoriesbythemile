<%= form_for([@article, @article.replies.build]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.label :name, input_html: {class: "input"}, wrapper: false, label_html: {class: 'label'} %>
  </div>
</div>
<div class="field">
  <div class="control">
      <%= f.text_area :reply, input_html: {class: "input"}, wrapper: false, label_html: {class: 'label'} %>
  </div>
</div>
<%= f.button :submit, class: "btn btn-primary" %>
<% end %>
